{% extends 'base.html.twig' %}

{% block title %}Quiz: {{ quiz.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg my-4">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">{{ quiz.title }}</h2>
                    <p class="card-text text-center mb-4">{{ quiz.description }}</p>
                    <form method="POST" action="{{ path('app_quiz_complete', {'id': quiz.id}) }}">
                        {% for question in quiz.questions %}
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">{{ question.text }}</h5>
                                {% for answer in question.answers %}
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="{{ answer.id }}" name="answers[]" value="{{ question.id ~ '-' ~ answer.id }}">
                                    <label class="form-check-label" for="{{ answer.id }}">{{ answer.text }}</label>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% endfor %}
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Envoyer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}