{% extends 'base.html.twig' %}

{% block title %}Quiz: {{ quiz.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg my-4">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">{{ quiz.title }}</h2>
                    <p class="card-text text-center mb-4">{{ quiz.description }}</p>
                    <form id="quizForm" method="POST" action="{{ path('app_show_quizz', {'id': quiz.id}) }}">
                        {% for question in quiz.questions %}
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">{{ question.text }}</h5>
                                    {% for answer in question.answers %}
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" id="{{ answer.id }}" name="answers[{{ question.id }}]" value="{{ answer.id }}"> 
                                            <label class="form-check-label" for="{{ answer.id }}">{{ answer.text }}</label>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                        <input type="hidden" name="redirect_url" value="{{ path('app_quizzes', {'id': app.user.id}) }}">
                        <p class="nav-item">
                            <button type="submit" class="btn btn-primary btn-block">Envoyer</button>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('quizForm').addEventListener('submit', function(event) {
    // Get all radio buttons in the form
    var radioButtons = document.querySelectorAll('input[type="radio"]');
    var answeredQuestions = {};

    // Loop through radio buttons and count answered questions
    radioButtons.forEach(function(radioButton) {
        if (radioButton.checked) {
            var questionId = radioButton.getAttribute('name').replace('answers[', '').replace(']', '');
            answeredQuestions[questionId] = true;
        }
    });

    // verifier si les questions sont répondus 
    var totalQuestions = {{ quiz.questions|length }};
    var answeredCount = Object.keys(answeredQuestions).length;
    if (answeredCount < totalQuestions) {
        alert('Veuillez répondre à toutes les questions avant de soumettre.');
        event.preventDefault(); 
    }
});
</script>

{% endblock %}
