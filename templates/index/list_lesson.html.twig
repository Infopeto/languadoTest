{% extends 'base.html.twig' %}

{% block title %}Lessons{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        {# Left Column: Languages #}
        <div class="col-md-4 text-center" id="languages-column">
            <h2>Languages</h2>
            <ul class="list-group">
                {# Loop through each language #}
                {% for language in languages %}
                    <li class="list-group-item"><a href="{{ path('app_list_lesson', {id : language.id }) }}">{{language.name}}</a></li>
                {% endfor %}
            </ul>
        </div>

        {# Right Column: Lessons #}
       <div class="row justify-content-center">
        <div class="col-md-8 row justify-content-center" id="lessons-column">
            <h2>Lessons</h2>
            <ul class="list-group">
                {# Loop through each lesson #}
                {% for plop in lessons %}
                    {# Audio player for the lesson #}
                    <audio controls style="width:100%">
                        <source src="{{ plop.src }}" type="audio/mp3">
                    </audio>

                    {# Displaying the title of the lesson #}
                    <h2 class="list-group-item text-center">- {{ plop.title }}</h2>
                    
                    {# Displaying the transcription and language of the lesson #}
                    <li class="list-group-item">{{ plop.transcription }} - {{ plop.language.name }}</li>
                {% endfor %}
            </ul>
        </div>
     </div>
    </div>
</div>
{% endblock %}
