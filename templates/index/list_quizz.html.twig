{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        {% for quiz in quizzes %}
        <div class="col-md-4 mb-4 mt-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ quiz.title }}</h5>
                    <a href="{{ path('app_show_quizz', { id: quiz.id }) }}" class="btn btn-primary">Start Quiz</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
