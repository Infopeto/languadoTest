{% extends 'base.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4 mb-3 text-center">Quiz Index</h1>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for quiz in quizzes %}
                        <tr>
                            <td>{{ quiz.id }}</td>
                            <td>{{ quiz.title }}</td>
                            <td>{{ quiz.description }}</td>
                            <td>
                                <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-info btn-sm mr-2">Show</a>
                                <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form action="{{ path('app_quiz_delete', {'id': quiz.id}) }}" method="post" style="display: inline-block;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-6 text-center">
            <a href="{{ path('app_quiz_new') }}" class="btn btn-success">Create New Quiz</a>
        </div>
    </div>
</div>
{% endblock %}
