{% extends 'base.html.twig' %}

{% block title %}Show-quiz{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4 mb-3 text-center">Quiz</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ quiz.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Title</th>
                        <td>{{ quiz.title }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ quiz.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <a href="{{ path('app_quiz_index') }}" class="btn btn-secondary mr-2">Back to List</a>
            <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-primary">Edit</a>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-4">
            {{ include('quiz/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
