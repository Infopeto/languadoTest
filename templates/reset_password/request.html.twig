{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<main>
    <div class="container">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        Réinitialiser votre mot de passe
                    </div>
                    <div class="card-body">
                        {{ form_start(requestForm) }}
                            <div class="mb-3">
                                {{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre adresse e-mail'}}) }}
                            </div>
                            <div>
                                <small>
                                    Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                </small>
                            </div>
                            <button type="submit" class="btn btn-primary">Envoyer l'e-mail de réinitialisation du mot de passe</button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
